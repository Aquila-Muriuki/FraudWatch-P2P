datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Vendor {
  id           String        @id @default(cuid())
  name         String
  email        String?
  phone        String?
  address      String?
  category     String?
  riskScore    Int           @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]
}

// =====================
//  Transaction Model
// =====================

model Transaction {
  id            String    @id @default(cuid())
  invoiceNumber String?
  supplierName  String
  amount        Float
  department    String?
  rawPayload    Json? // store original JSON, or pointer
  description   String?
  status        String    @default("PENDING") // PENDING, OK, REVIEW, BLOCK, ERROR
  createdAt     DateTime  @default(now())
  processedAt   DateTime?

  vendorId       String?
  vendor        Vendor? @relation(fields: [vendorId], references: [id])

  // relation
  decisions Decision[]

  // indexes
  @@index([supplierName])
  @@index([createdAt])
}

model Decision {
  id             String      @id @default(cuid())
  transaction    Transaction @relation(fields: [transactionId], references: [id])
  transactionId  String
  score          Int
  riskLevel      String
  status         String
  flags          Json? // array of flags
  rulesTriggered Json? // array of rule codes
  auditSnapshot  Json? // full snapshot for audit/legal
  modelVersion   String?
  createdAt      DateTime    @default(now())

  @@index([transactionId])
}

model Rule {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  ruleType  String
  severity  Int
  active    Boolean  @default(true)
  payload   Json?
  category  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
